<?xml version="1.0" encoding="utf-8" ?>
<ShaderEffect>
  <EffectFile>Shaders/ParticleEffect</EffectFile>
  <Variables>
    <Uniform>
      <Texture2D type="xna" name="Texture">Textures/smoke</Texture2D>
      <float name="Duration">2</float>
      <float name="DurationRandomness">1,5</float>
      <Vector3 name="Gravity">0;0;0</Vector3>
      <float name="EndVelocity">0</float>
      <Vector4 name="MinColor">0,3;0,4;0,5;1</Vector4>
      <Vector4 name="MaxColor">1;1;1;0,5</Vector4>
      <Vector2 name="RotateSpeed">-4;4</Vector2>
      <Vector2 name="StartSize">2;4</Vector2>
      <Vector2 name="EndSize">5;15</Vector2>
    </Uniform>
    <Mutable>
      <Matrix name="View">View</Matrix>
      <Matrix name="Projection">Projection</Matrix>
      <Vector2 name="ViewportScale">ViewportScale</Vector2>
      <float name="CurrentTime">Time</float>
    </Mutable>
  </Variables>
  <Technique>Particles</Technique>
</ShaderEffect>